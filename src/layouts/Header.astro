---
import { getImage } from "astro:assets";

interface Props {
    title?: string;
    backgroundImage?: string;
    tagline?: string;
}

const { title, backgroundImage, tagline } = Astro.props;

let bg = '';
let classes = "page-header margin-below-large";
if (backgroundImage) {
    const optimizedBackground = await getImage({src: backgroundImage, width: 2400, height: 600, format: 'webp'})
    bg = `background: url(${optimizedBackground.src}) center top/cover`;
    classes += " page-header-hero";
}

---

<header class={classes} style={bg}>
    <div class="container">
        <div class="row">
            <h1 class="col-lg-12 col-md-12 col-sm-12">
                {title}
                <small>{tagline}</small>
            </h1>
        </div>
    </div>
</header>