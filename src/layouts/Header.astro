---
import { getImage } from "astro:assets";

interface Props {
    title?: string;
    backgroundImage?: string;
    tagline?: string;
    classes?: string;
}

let { title, backgroundImage, tagline, classes } = Astro.props;

let bg = '';
classes = "page-header margin-below-large " + classes;
if (backgroundImage) {
    const optimizedBackground = await getImage({src: backgroundImage, width: 2400, height: 600, format: 'webp'})
    bg = `background-image: url(${optimizedBackground.src})`;
    classes += " page-header-hero";
}

---

<header class={classes} style={bg}>
    <div class="container">
        <div class="row">
            <h1 class="col-lg-12 col-md-12 col-sm-12">
                {title}
                <small>{tagline}</small>
            </h1>
        </div>
    </div>
</header>