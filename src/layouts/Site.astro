---
import '../styles/custom_bootstrap.less';
import '../styles/app.less';
import Footer from './Footer.astro';
import Header from './Header.astro';
import Nav from './Nav.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
const { url } = Astro;
---

<!doctype html>
<html lang="en">
	<meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{ title }</title>
	<meta name="twitter:card" content="summary">
	<meta property="og:type" content="website"/>
	<meta name="twitter:site" content="@helmgast">
	<meta name="twitter:url" property="og:url" content={ url }>
	<meta name="twitter:title" property="og:title" content={ title }>
	<meta name="twitter:description" property="og:description" content="">
	<meta name="twitter:image" property="og:image" content="https://helmgast.se/static/img/helmgast_512px.png">

	<!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous"> -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=News+Cycle:400,700|Raleway:400,700|Eczar:700|Gentium+Book+Basic:400,400italic,700,700italic" />

	<body>
		<Nav />
		<Header />
		<div class="container">
			<div class="row">
				<slot />
			</div>
		</div>
		<Footer />
	</body>
</html>

<style>
	.content {
		font-family: 'Gentium Book Basic', 'Georgia', sans-serif;
		font-size: 18px;
	}

	.page-header h1, .page-header h2, .page-header h3, .page-header h4, .page-header h5, .page-header h6,
	.content h1, .content h2, .content h3, .content h4, .content h5, .content h6 {
		font-family: 'Eczar', 'Gentium Book Basic', sans-serif;
		font-weight: 700;
		color: #333;
	}

	.page-header .publisher-header {
		font-family: 'Gentium Book Basic', sans-serif !important;
		font-weight: 400;
		text-transform: uppercase;
	}
</style>
